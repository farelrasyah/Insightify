{
  "manifest_version": 3,
  "name": "Insightify - YouTube Comment Summarizer",
  "version": "1.0.0",
  "description": "Summarize YouTube comments using AI to get insights from viewer reactions",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://generativelanguage.googleapis.com/*"
  ],  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["utils.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Insightify - Summarize Comments",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
